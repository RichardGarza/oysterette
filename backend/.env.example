PORT=3000
NODE_ENV=production

# PostgreSQL Database URL (Neon with Connection Pooling)
# For Neon: Use pooled connection URL from Neon dashboard
# Add connection_limit and pool_timeout for serverless optimization
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require&pgbouncer=true&connection_limit=5&pool_timeout=30"
# Alternative (non-pooled): postgresql://user:password@host:5432/database?sslmode=require

# JWT Secret (generate a secure random string)
JWT_SECRET="your-secure-random-jwt-secret-here"
JWT_EXPIRES_IN="7d"

# Cloudinary (Image Upload Service) - Optional
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
